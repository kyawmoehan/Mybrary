<h2>Search Authors</h2>

<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>

<% authors.forEach(author => { %>
    <div><%= author.name %></div>
    <a href="/authors/<%= author._id %>">View</a>
    <a href="/authors/<%= author._id %>/edit">Edit</a>
    <%- include('../partials/delete_form.ejs', {url: `/authors/${author.id}`}) %>
<% }) %>