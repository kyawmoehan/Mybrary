<h2 class="page-header">Search Authors</h2>

<form action="/authors" method="GET">
    <label for="name">Name</label>
    <input type="text" name="name" id="name" value="<%= searchOptions.name %>">
    <button type="submit">Search</button>
</form>

<% authors.forEach(author => { %>
    <div><%= author.name %></div>
    <div class="btn-row">
        <a href="/authors/<%= author._id %>" class="btn btn-primary">View</a>
        <a href="/authors/<%= author._id %>/edit" class="btn btn-primary">Edit</a>
        <%- include('../partials/delete_form.ejs', {url: `/authors/${author.id}`}) %>
    </div>
<% }) %>